<% provide(:title, 'View Courses') %>

<div class="container">
  <h3>Your Courses:</h3>
  <hr>
</div>


<div class="w3-cell-row">
  <% @courses.each do |course| %>
      <div class="w3-container w3-cell w3-third w3-padding-32 w3-mobile">
        <div class="w3-card-2 w3-hover-shadow" style="width:100%">
          <%= image_tag("course_cover.svg", :alt => "Course Cover", :style => "width:100%") %>
          <!--<img src="img_fjords.jpg" alt="Norway" style="width:100%">-->
          <div class="w3-container w3-margin-top">
            <p> <%= course['name'] %> </p>
          </div>
          <div class="w3-row">
            <div class="w3-quarter w3-center">
              <h3> </h3>
              <!--<span class="glyphicon glyphicon-new-window course-icon" aria-hidden="true"></span>-->
              <%= link_to '<span class="glyphicon glyphicon-new-window course-icon" aria-hidden="true"></span>'.html_safe, grades_path(course['id']) %>
            </div>
            <div class="w3-quarter w3-center">
              <h3> </h3>
              <%= link_to '<span class="glyphicon glyphicon-save course-icon" aria-hidden="true"></span>'.html_safe, export_path(course['id'], format: :xlsx) %>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>