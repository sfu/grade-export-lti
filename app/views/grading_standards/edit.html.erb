<% provide(:title, "Edit Grading Standard") %>

<div class="container">
  <h3>Update Grading Standard</h3>
  <hr>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @grading_standard, :html => {:class => 'form-horizontal'} do |f| %>
          <%= render 'shared/grading_error_messages' %>

          <div class="form-group">
            <%= f.label :title, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.text_field :title, class: 'form-control' %>
            </div>
          </div>

          <%= f.fields_for :grading_scheme do |sf| %>
              <div class="col-lg-6 col-md-6">
                <div class="form-group">
                  <%= sf.label :name, class: 'control-label col-sm-4' %>
                  <div class="col-sm-8">
                    <%= sf.text_field :name, :readonly => true, class: 'form-control' %>
                  </div>
                </div>
              </div>

              <div class="col-lg-6 col-md-6">
                <div class="form-group">
                  <%= sf.label :percentage, class: 'control-label col-sm-6' %>
                  <div class="col-sm-6">
                    <%= sf.text_field :percentage, class: 'form-control' %>
                  </div>
                </div>
              </div>
          <% end %>
          <hr>
          <%= f.submit "Save changes", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>